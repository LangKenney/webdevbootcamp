<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Edit <%=winery.name%></div>
        <form class="ui form" action="/wineries/<%=winery._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Winery Name</label>
            <input type="text" name="winery[name]" value="<%=winery.name%>">
        </div>
        
        <div class="field">
            <label>Image</label>
            <input type="text" name="winery[image]" value="<%=winery.image%>">
        </div>
        
        <div  class="field">
            <label>Description</label>
            <textarea name="winery[description]"><%=winery.description%></textarea>
        </div>
        
        <div class="field">
            <label>Location</label>
            <input type="number" id="location1" name="winery[location1]" step="any" value="<%=winery.location1%>" min="-180" max="180" tabindex="1">
            <input type="number" id="location2" name="winery[location2]" step="any" value="<%=winery.location2%>" min="-180" max="180" tabindex="1">
        </div>
        <input class="ui violet big button" type="submit"  value="Submit Edits to Winery">
        </form>
</div>

<% include ./partials/footer %>